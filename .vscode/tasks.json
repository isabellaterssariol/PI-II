{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar e Rodar Jogo (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "C:\\msys64\\mingw64\\bin\\gcc.exe src/main.c -o ${workspaceFolder}\\jogo.exe -I C:/msys64/mingw64/include -L C:/msys64/mingw64/lib -lallegro -lallegro_main -lallegro_image -lallegro_font -lallegro_ttf -lallegro_primitives -lallegro_dialog && ${workspaceFolder}\\jogo.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
